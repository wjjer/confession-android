    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/dp_50"
        android:gravity="center"
        android:text="告白二维码已生成"/>
    <ImageView
        android:scaleType="center"
        android:layout_below="@+id/tv_tip"
        android:layout_marginTop="@dimen/dp_4"
        android:id="@+id/iv_share_content"
        android:layout_width="match_parent"
        android:layout_height="200dp">

    </ImageView>

    <TextView
        android:visibility="gone"
        android:id="@+id/share_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_share_content"
        android:layout_marginTop="10dp"
        android:alpha="0.95"
        android:gravity="center"
        android:padding="5dp"
        android:text="去粘贴告白"
        android:textColor="#666666"
        android:textSize="18sp" />

    <TextView
        android:layout_marginTop="@dimen/dp_4"
        android:id="@+id/btn_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_share_content"
        android:background="@color/lightblue"
        android:gravity="center"
        android:padding="15dp"
        android:text="分享二维码"
        android:textColor="#666666"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/btn_save"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_share"
        android:background="@color/lightgray"
        android:gravity="center"
        android:padding="15dp"
        android:text="保存二维码"
        android:textColor="#666666"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/btn_cancel"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_save"
        android:background="@drawable/border_xuxian_pink"
        android:gravity="center"
        android:padding="15dp"
        android:text="取消分享"
        android:textColor="#666666"
        android:textSize="18sp" />


